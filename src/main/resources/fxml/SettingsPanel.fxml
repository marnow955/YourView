<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="com.github.marnow955.yourview.controllers.SettingsPanelController"
         prefWidth="450" prefHeight="450" tabClosingPolicy="UNAVAILABLE" tabMinWidth="208">

    <fx:define>
        <ToggleGroup fx:id="themeTG"/>
    </fx:define>

    <tabs>
        <Tab text="%general">
            <VBox>
                <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets topRightBottomLeft="10.0"/>
                    </padding>

                    <Label text="%appearance" styleClass="infoLabel"/>

                    <VBox spacing="5.0">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                        <RadioButton fx:id="dark" text="%dark_theme" toggleGroup="$themeTG" styleClass="infoContent"/>
                        <RadioButton fx:id="light" text="%light_theme" toggleGroup="$themeTG" styleClass="infoContent"/>
                        <CheckBox text="%show_background" styleClass="infoContent"/>
                    </VBox>


                    <Label text="%language" styleClass="infoLabel"/>
                    <HBox>
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                        <Label text="%choose_language" styleClass="infoContent"/>
                        <ComboBox fx:id="langCB"/>
                    </HBox>
                </VBox>

                <HBox alignment="BOTTOM_CENTER" styleClass="buttonsBox">
                    <Button styleClass="textButton, rightBoxBorder" text="%w_save" HBox.hgrow="ALWAYS"
                            maxWidth="Infinity"/>
                    <Button styleClass="textButton" text="%w_cancel" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                </HBox>

            </VBox>
        </Tab>

        <Tab text="%menus_toolbars">
            <VBox>
                <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets topRightBottomLeft="10.0"/>
                    </padding>

                    <CheckBox text="%show_menu" styleClass="infoContent"/>

                    <CheckBox text="%show_status_bar" styleClass="infoContent"/>

                    <CheckBox text="%show_info_panel" styleClass="infoContent"/>

                    <VBox spacing="5.0">
                        <CheckBox text="%show_toolbar" styleClass="infoContent"/>
                        <HBox>
                            <Label text="%toolbar_position" styleClass="infoContent"/>
                            <ComboBox fx:id="toolbarPosition"/>
                        </HBox>
                    </VBox>

                    <VBox spacing="5.0">
                        <CheckBox text="%show_th" styleClass="infoContent"/>
                        <HBox>
                            <Label text="%thumb_view_position" styleClass="infoContent"/>
                            <ComboBox fx:id="thumbViewPosition"/>
                        </HBox>
                    </VBox>
                </VBox>

                <HBox alignment="BOTTOM_CENTER" styleClass="buttonsBox">
                    <Button styleClass="textButton, rightBoxBorder" text="%w_save" HBox.hgrow="ALWAYS"
                            maxWidth="Infinity"/>
                    <Button styleClass="textButton" text="%w_cancel" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                </HBox>

            </VBox>
        </Tab>

    </tabs>


</TabPane>
