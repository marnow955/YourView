<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.marnow955.yourview.MainController">

    <top>
        <VBox>
            <MenuBar>
                <BorderPane.margin>
                    <Insets bottom="10.0"/>
                </BorderPane.margin>
                <Menu text="%file">
                    <MenuItem text="%open_file"/>
                    <MenuItem text="%save" accelerator="Shortcut+S"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="%exit"/>
                </Menu>
                <Menu text="%edit">
                </Menu>
                <Menu text="%help">
                    <MenuItem text="%about"/>
                </Menu>
            </MenuBar>
            <fx:include fx:id="toolbar" source="Toolbar.fxml"/>
        </VBox>
    </top>

</BorderPane>
